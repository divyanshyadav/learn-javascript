{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "immutable"
    ],
    "rules": {
        "immutable/no-mutation": 2,
        "immutable/no-let": 2,
    	"immutable/no-this": 2,
        "indent": ["error", 4]
    }
}